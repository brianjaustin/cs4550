server {

    server_name {{ site_name }}.baustin-neu.site;

    location / {
        proxy_pass http://localhost:{{ service_port }};
    }

    location /socket {
        proxy_pass http://localhost:{{ service_port }};
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";	 	 
    }

    listen [::]:443 ssl; # managed by Certbot
    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/baustin-neu.site/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/baustin-neu.site/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

}
server {
    if ($host = hw04.baustin-neu.site) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    listen 80;
    listen [::]:80;

    server_name {{ site_name }}.baustin-neu.site;
    return 404; # managed by Certbot


}
